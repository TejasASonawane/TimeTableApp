@model TimeTableApp.Models.TimeTableModel

<h2>Generated Time Table</h2>

<table border="1">
    <thead>
        <tr>
            @for (int i = 1; i <= Model.NoOfWorkingDays; i++)
            {
                <th>Day @i</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.NoOfSubjectsPerDay; i++)
        {
            <tr>
                @for (int j = 0; j < Model.NoOfWorkingDays; j++)
                {
                    <td>@Model.SubjectHoursList[i % Model.SubjectHoursList.Count].SubjectName</td>
                }
            </tr>
        }
    </tbody>
</table>
